@* ReSharper disable once RedundantUsingDirective *@

@using Sandbox.Razor
@using Sandbox.UI;
@inherits Kira.UI.BaseNavWindow;

<style>
    BasicWindow {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        height: 100%;
        width: 100%;
    }
</style>


@if (!IsActive)
{
    Log.Info("is active");
    return;
}
<root>
    TEST
</root>

@code
{
    public override bool IsActive { get; set; } = false;

    protected override void OnAfterTreeRender(bool firstTime)
    {
        if (!firstTime) return;
        Panel container = this.Add.Panel("window-container");
        container.AddChild(new UnitsWindow());
    }

    protected override int BuildHash() => System.HashCode.Combine(IsActive);
}