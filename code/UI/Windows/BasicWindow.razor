@using Sandbox.UI
@inherits Kira.UI.BaseNavWindow
@namespace Kira.UI

<style>
    BasicWindow {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        height: 100%;
        width: 100%;
    }
</style>


@if (!IsActive)
{
    return;
}
<root>
</root>

@code
{
    public override bool IsActive { get; set; } = false;
    private UnitsWindow unitsWindow;

    protected override void OnAfterTreeRender(bool firstTime)
    {
        if (!firstTime) return;
        unitsWindow = new UnitsWindow();
        Panel container = Add.Panel("window-container");
        container.AddChild(unitsWindow);
    }

    protected override int BuildHash() => System.HashCode.Combine(IsActive, unitsWindow);
}